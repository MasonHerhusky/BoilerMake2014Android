<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:id="@+id/eventTitle"
                    android:gravity="center"
                    android:textSize="50dp"
                    />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="wrap_content"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="August 25th"
                        android:id="@+id/date"
                        android:textSize="30dp"
                        />
                <Space android:layout_width="20dp" android:layout_height="fill_parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:00PM - 6:00PM"
                        android:id="@+id/date"
                        android:textSize="20dp"
                        />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarkington War Room"
                    android:id="@+id/eventLocation"
                    android:textSize="25dp"
                    />

            <Space android:layout_width="fill_parent" android:layout_height="20dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description of the event being hosted with lots of words and descriptive adjectives and other things to be include within the description of said event. There could possibly be photos beneath this text which would looks great."
                    android:id="@+id/eventDescription"
                    android:textSize="20dp"
                    />
            <Space android:layout_width="fill_parent" android:layout_height="20dp"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Attend Event"
                    android:gravity="center"
                    android:id="@+id/attend_button"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>