<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/blurrycity"
              android:layout_height="match_parent">




    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linear">

            <Space android:layout_width="20dp" android:layout_height="25dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:text=""
                    android:id="@+id/eventTitle"
                    android:gravity="center"
                    android:textSize="50dp"
                    />

            <Space android:layout_width="20dp" android:layout_height="25dp"/>

            <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/startTime"
                    android:textColor="#ff616163"
                    android:textSize="30dp"
                    />
            <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff616163"
                    android:id="@+id/endTime"
                    android:textSize="30dp"
                    />
            <Space android:layout_width="20dp" android:layout_height="25dp"/>


            <Space android:layout_width="fill_parent" android:layout_height="20dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text=""
                    android:id="@+id/eventDescription"
                    android:inputType="textMultiLine"
                    android:textSize="20dp"
                    />
            <Space android:layout_width="fill_parent" android:layout_height="40dp"/>
            <FrameLayout
                    android:layout_height="50dp"
                    android:layout_width="200dp"
                    android:layout_gravity="center">
            <Button
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:text="Attend Event"
                    android:textColor="#ff7dadd5"
                    android:id="@+id/attend_button" android:visibility="invisible"/>
            <Button
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:background="#ff0000"
                    android:text="Unattend Event"
                    android:textColor="#FFFFFF"
                    android:id="@+id/unattend_button" android:visibility="invisible"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
                <Space android:layout_width="fill_parent" android:layout_height="40dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/all_attending_text" android:layout_gravity="center_horizontal"/>
            <Button
                        android:layout_height="wrap_content"
                        android:layout_width="231dp"
                        android:text="Who's Attending?"
                        android:textColor="#FFFFFF"
                        android:id="@+id/all_attending_button"
                        android:layout_gravity="center_horizontal"
                        android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>