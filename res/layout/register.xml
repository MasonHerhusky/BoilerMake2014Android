<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/blueglow"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <Space android:layout_width="fill_parent" android:layout_height="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Register Account"
            android:textSize="50dp"
            android:textColor="#ff616163"
            android:id="@+id/textView"/>
    <Space android:layout_width="fill_parent" android:layout_height="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:id="@+id/textView2" android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:id="@+id/email_field" android:layout_gravity="center_horizontal"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="20dp"
            android:id="@+id/name" android:layout_gravity="center_horizontal"/>

    <EditText
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_field" android:layout_gravity="center_horizontal"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            android:id="@+id/password" android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_field" android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" android:layout_weight="0.37"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff50c6d1"
            android:text="Register"
            android:onClick="submitRegistration"
            android:id="@+id/register_button" android:layout_gravity="center_horizontal"/>

</LinearLayout>